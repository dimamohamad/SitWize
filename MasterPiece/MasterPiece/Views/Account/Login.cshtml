@model MasterPiece.Models.User

<style>



    main {
        background: url('background-image.jpg') no-repeat center center/cover;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 80vh;
    }

    .login-container {
        background-color: white;
        padding: 40px 20px; /* Increased padding to make the form taller */
        box-shadow: 0 0 10px rgb(0 0 0 / 26%);
        text-align: center;
        width: 500px; /* Match the sign-up form width */
        border-radius: 10px; /* Same border-radius */
    }

        .login-container h1 {
            color: #103741;
            margin-bottom: 1rem; /* Match sign-up form */
        }

        .login-container form {
            display: flex;
            flex-direction: column;
            gap: 10px;
        }

        .login-container input {
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 5px;
        }

        .login-container .options {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

            .login-container .options label {
                display: flex;
                align-items: center;
                gap: 5px;
            }

        .login-container button {
            background-color: #99005C; /* Match sign-up button */
            color: white;
            padding: 10px;
            border: none;
            border-radius: 10px;
            height: 50px;
            cursor: pointer;
            width: 100%; /* Full-width button */
        }

            .login-container button:hover {
                background-color: #99005C; /* Hover effect like sign-up */
            }

        .login-container a {
            color: #103741;
            text-decoration: none;
        }

        .login-container p {
            font-size: 12px;
            color: #777;
        }

        .login-container .facebook-login {
            font-size: 12px;
            color: #777;
            margin-top: 10px;
        }
</style>

<main>
    <div class="login-container">
        <h1>SitWise</h1>

        @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { id = "loginForm" }))
        {
            @Html.AntiForgeryToken()

            <input type="email" name="email" placeholder="EMAIL" required />
            <input type="password" name="password" placeholder="PASSWORD" required />

            <div class="options">
                <label>
                    <input type="checkbox" name="rememberMe" /> Remember me
                </label>
                <a href="#">Forgot password?</a>
            </div>

            <button type="submit">LOG IN</button>
        }

        <p>By logging in, you agree to our <a href="#">Terms of Use</a>. See our <a href="#">Privacy Policy</a>.</p>
        <a href="@Url.Action("Register", "Account")">Not a member? Sign up as a Parent </a>
    </div>
</main>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        @if (TempData["ErrorMessage"] != null)
        {
            <text>
                Swal.fire({
                    icon: 'error',
                    title: 'Login Failed',
                    text: '@TempData["ErrorMessage"]',
                });
            </text>
        }
    </script>
}
