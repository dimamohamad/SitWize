@model MasterPiece.Models.Booking

@{
    ViewBag.Title = "Edit Booking";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<div class="main-container">
    <div class="pd-ltr-20">
        <h2>Edit Booking</h2>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.BookingID)

            <div class="form-horizontal">
                <hr />
                <dl class="dl-horizontal">
                    <dt>@Html.DisplayNameFor(model => model.User.FirstName)</dt>
                    <dd>@Html.DisplayFor(model => model.User.FirstName) @Html.DisplayFor(model => model.User.LastName)</dd>

                    <dt>@Html.DisplayNameFor(model => model.Sitter.FirstName)</dt>
                    <dd>@Html.DisplayFor(model => model.Sitter.FirstName) @Html.DisplayFor(model => model.Sitter.LastName)</dd>

                    <dt>@Html.DisplayNameFor(model => model.Service.ServiceName)</dt>
                    <dd>@Html.DisplayFor(model => model.Service.ServiceName)</dd>

                    <dt>@Html.DisplayNameFor(model => model.ServiceDetail.StartDate)</dt>
                    <dd>@Html.DisplayFor(model => model.ServiceDetail.StartDate)</dd>

                    <dt>@Html.DisplayNameFor(model => model.BookingDate)</dt>
                    <dd>@Html.DisplayFor(model => model.BookingDate)</dd>

                    <dt>@Html.DisplayNameFor(model => model.TotalAmount)</dt>
                    <dd>@Html.DisplayFor(model => model.TotalAmount)</dd>
                </dl>

                <div class="form-group">
                    <strong> @Html.LabelFor(model => model.Status, htmlAttributes: new { @class = "control-label col-md-2" })</strong>
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.Status, (SelectList)ViewBag.Statuses, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        }

        <div>
            @Html.ActionLink("Back", "GetBookings","Admin")
        </div>
    </div>
</div>
<style>
    select#Status{
        width:17%;
    }
</style>