            $.ajax({
                url: '@Url.Action("FilterSitters", "Booking")',
                type: 'GET',
                data: {
                    ExperienceRange: experienceRange,
                    HourlyRateRange: hourlyRateRange,
                    HasSpecialNeedsLicense: hasSpecialNeedsLicense
                },
                success: function (sitters) {
                    var sittersHtml = '';
                    var antiForgeryToken = $('input[name="__RequestVerificationToken"]').val();

                    $.each(sitters, function (index, sitter) {
                        sittersHtml += '<div class="col-md-12">' +
                            '<div class="card mb-4">' +
                            '<div class="row no-gutters">' +
                            '<div class="col-md-4">' +
                            '<img src="/Images/'+sitter.sitterImage +'" class="card-img" alt="' + sitter.FirstName + '">' +
                            '</div>' +
                            '<div class="col-md-8">' +
                            '<div class="card-body">' +
                            '<h5 class="card-title">' + sitter.FirstName + ' ' + sitter.LastName + '</h5>' +
                            '<p class="card-text"><strong>Experience Years:</strong> ' + sitter.ExperienceYears + ' years paid experience</p>' +
                            '<p class="card-text"><strong>Price per Hour:</strong> $' + sitter.HourlyRate + '</p>' +
                            '<p class="card-text"><strong>Bio:</strong> ' + sitter.Bio + '</p>' +
                            '<p class="card-text"><strong>Special Needs License:</strong> ' + (sitter.HasSpecialNeedsLicense ? 'Yes' : 'No') + '</p>';

                           if (sitter.LicensePath) {
                    sittersHtml += '<p><a href="' + '@Url.Action("DownloadLicense", "Booking")' + '?path=' + encodeURIComponent(sitter.LicensePath) + '" class="btn btn-secondary">Download License</a></p>';
                }

                        sittersHtml += '<form action="@Url.Action("BookSitter", "Booking")" method="post">' +
                            '<input type="hidden" name="sitterId" value="' + sitter.SitterID + '">' +
                            '<input type="hidden" name="__RequestVerificationToken" value="' + antiForgeryToken + '">' +
                            '<input type="submit" class="btn btn-primary" value="Book">' +
                            '</form>' +
                            '</div>' +
                            '</div>' +
                            '</div>' +
                            '</div>' +
                            '</div>';
                    });

                    $('#sitters-list').html(sittersHtml);
                }
            });
        }

        $('#ExperienceRange, #HourlyRateRange, #HasSpecialNeedsLicense').on('change', function () {
