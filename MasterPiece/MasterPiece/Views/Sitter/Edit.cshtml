@model MasterPiece.Models.EditSitterViewModel

@{
    ViewBag.Title = "Edit Profile";
    //Layout = "~/Views/Shared/_LayoutPage1.cshtml";

    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center">Edit Profile</h2>
<style>
    .custom-shadow {
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2); /* Increase shadow size */
    }

    .subt {
        background-color: #99005C;
        color: white;
        padding: 10px 15px;
        border: none;
        cursor: pointer;
        width: 100%;
        border-radius: 5px;
    }

        .subt:hover {
            background-color: #7c0049;
        }
</style>

<div class="container mt-5">
    <div class="custom-shadow p-4 mb-5 bg-white rounded">
        <!-- Use custom shadow class -->
        @using (Html.BeginForm("Edit", "Sitter", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.SitterID)

            <div class="form-group">
                <label for="FirstName">First Name:</label>
                @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
            </div>

            <div class="form-group">
                <label for="LastName">Last Name:</label>
                @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
            </div>

            <div class="form-group">
                <label for="Email">Email:</label>
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @readonly = "readonly" })
            </div>


            <div class="form-group">
                <label for="PhoneNumber">Phone:</label>
                @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control" })
            </div>

            <div class="form-group">
                <label for="Bio">Bio:</label>
                @Html.TextAreaFor(m => m.Bio, new { @class = "form-control" })
            </div>

            <div class="form-group">
                <label for="ExperienceYears">Experience Years:</label>
                @Html.TextBoxFor(m => m.ExperienceYears, new { @class = "form-control", @readonly = "readonly" })
            </div>

            <div class="form-group">
                <label for="HourlyRate">Hourly Rate:</label>
                @Html.TextBoxFor(m => m.HourlyRate, new { @class = "form-control", @readonly = "readonly" })
            </div>
            <div class="form-group">
                <label for="ImageFile">Profile Picture:</label>
                <input type="file" name="ImageFile" id="ImageFile" class="form-control" />
                @Html.ValidationMessage("ImageFile", "Please choose an image.", new { @class = "text-danger" })
            </div>

            <button type="submit" id="subt" class="btn">Save Changes</button>
        }

        <div>
            @Html.ActionLink("Back", "Profile", null, new { @class = "btn btn-secondary mt-2" })
        </div>
    </div>
</div>
